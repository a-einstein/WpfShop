<?xml version="1.0" encoding="utf-8"?>

<!--
Visual Studio publish profiles.
https://go.microsoft.com/fwlink/?LinkID=208121 

Note Azure needs some explicit command line settings.
https://learn.microsoft.com/en-us/dotnet/core/tools/dotnet-publish
/p:TargetFramework="net7.0-windows"
/p:RuntimeIdentifier="win-x86"
-->

<Project ToolsVersion="4.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <ApplicationRevision>0</ApplicationRevision>
    <ApplicationVersion>0.21.0.0</ApplicationVersion>
    <BootstrapperEnabled>True</BootstrapperEnabled>
    <Configuration>Release</Configuration>
    <CreateWebPageOnPublish>False</CreateWebPageOnPublish>
    <GenerateManifests>True</GenerateManifests>
    <Install>True</Install>
    <InstallFrom>Disk</InstallFrom>
    <IsRevisionIncremented>False</IsRevisionIncremented>
    <IsWebBootstrapper>False</IsWebBootstrapper>
    <ManifestCertificateThumbprint>DD4AE5FC74966D963CB0A16D0549F08482BF7CD8</ManifestCertificateThumbprint>
    <MapFileExtensions>False</MapFileExtensions>
    <OpenBrowserOnPublish>false</OpenBrowserOnPublish>
    <Platform>Any CPU</Platform>
    <ProductName>Cyclone.WPF.ClickOnce</ProductName>
    <PublishDir>..\..\publish\ClickOnce\</PublishDir>
    <PublishUrl>..\..\publish\ClickOnce\</PublishUrl>
    <PublisherName>RCS</PublisherName>
    <PublishProtocol>ClickOnce</PublishProtocol>
    <PublishReadyToRun>False</PublishReadyToRun>
    <PublishSingleFile>False</PublishSingleFile>
    <SelfContained>False</SelfContained>
    <SignatureAlgorithm>sha256RSA</SignatureAlgorithm>
    <SignManifests>True</SignManifests>
    <SuiteName>Cyclone</SuiteName>
    <SupportUrl>https://github.com/a-einstein/WpfShop</SupportUrl>
    <TargetFramework>net7.0-windows</TargetFramework>
    <UpdateEnabled>False</UpdateEnabled>
    <UpdateMode>Foreground</UpdateMode>
    <UpdateRequired>False</UpdateRequired>
    <WebPageFileName>Publish.htm</WebPageFileName>
    <RuntimeIdentifier>win-x86</RuntimeIdentifier>
    <SkipPublishVerification>false</SkipPublishVerification>
  </PropertyGroup>
  
  <ItemGroup>
    <BootstrapperPackage Include="Microsoft.NetCore.DesktopRuntime.7.0.x86">
      <Install>true</Install>
      <ProductName>.NET Desktop Runtime 7.0.19 (x86)</ProductName>
    </BootstrapperPackage>
  </ItemGroup>
</Project>