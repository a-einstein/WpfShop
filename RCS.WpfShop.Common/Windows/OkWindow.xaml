<Window 
    x:Class="RCS.WpfShop.Common.Windows.OkWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Resources="clr-namespace:RCS.WpfShop.Resources;assembly=RCS.WpfShop.Resources"
    MinHeight="200" MinWidth="300"
    SizeToContent="WidthAndHeight"
    >

    <Window.Resources>
        <ResourceDictionary>
            <Resources:Wrapper x:Key="Resources" />
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#FFEAEAEA">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Grid.Column="0" x:Name="viewControl"/>

        <Button Grid.Row="1" Grid.Column="0" Name="closeButton" Content="{Binding Source={StaticResource Resources}, Path=Labels.Close}" Click="closeButton_Click" Margin="5" HorizontalAlignment="Right"/>
    </Grid>
</Window>
