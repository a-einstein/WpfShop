<Window 
    x:Class="Demo.Windows.OkWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    MinHeight="200" MinWidth="300"
    SizeToContent="WidthAndHeight"
    >

    <Grid Background="#FFEAEAEA">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ContentControl Grid.Row="0" Grid.Column="0" x:Name="viewControl"/>

        <Button Grid.Row="1" Grid.Column="0" Name="closeButton" Content="Close" Click="closeButton_Click" Margin="5" HorizontalAlignment="Right"/>
    </Grid>
</Window>
