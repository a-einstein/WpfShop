<Application 
    x:Class="WpfTestApplication.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml"
    >

    <Application.Resources>
        <Color x:Key="MessageColour">blue</Color>
        <Color x:Key="ErrorColour">red</Color>

        <SolidColorBrush x:Key="MessageColourBrush" Color="{StaticResource MessageColour}"/>
        <SolidColorBrush x:Key="ErrorColourBrush" Color="{StaticResource ErrorColour}"/>
    </Application.Resources>
</Application>
