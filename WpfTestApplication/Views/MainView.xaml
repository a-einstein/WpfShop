<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:WpfTestApplication="clr-namespace:WpfTestApplication" 
    x:Class="WpfTestApplication.Views.MainView"
    Title="WpfTestApplication"
    Height="900" Width="700"
    >

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock  TextWrapping="Wrap" Text="WpfTestApplication" FontWeight="Bold" FontSize="20" Foreground="{StaticResource MessageColourBrush}"/>

            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,5">
                <Button x:Name="productsButton" Click="ProductsButton_Click" Style="{StaticResource NavigationButtonStyle}">
                    <TextBlock Text="Products" Style="{StaticResource NavigationTextBlockStyle}"/>
                </Button>
                <Button x:Name="aboutButton" Click="AboutButton_Click" Style="{StaticResource NavigationButtonStyle}">
                    <TextBlock Text="About us" Style="{StaticResource NavigationTextBlockStyle}"/>
                </Button>
            </StackPanel>
        </StackPanel>

        <Frame Grid.Row="1" x:Name="pageFrame" Margin="0" Source="/Views/ProductsView.xaml" />
    </Grid>
</Window>
